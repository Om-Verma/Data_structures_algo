#include<cstring>

#include<algorithm>

void reverseEachWord(char input[]) {

    // Write your code here

int prev=-1;

    for(int i=0;i<=strlen(input);i++)

    {

        if(input[i]==' '||input[i]=='\0')

        {

            std::reverse(input+prev+1,input+i);

                prev=i;

        }

    }

}
